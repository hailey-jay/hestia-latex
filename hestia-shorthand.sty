        % Aliases

        \newcommand{\icup}[1]{\bigcup_{i=1}^{#1}}
        \newcommand{\icap}[1]{\bigcap_{i=1}^{#1}}
        \newcommand{\isum}[1]{\sum_{i=1}^{#1}}

        \let\cl\overline
        \renewcommand{\cal}{\mathcal}
\newcommand{\n}{~\par}
        \newcommand{\clear}{\rm~\n}
