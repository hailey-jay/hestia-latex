%for calculating modulo. i see no need to @ protect it
\newcount\remainder
\def\modulo#1#2{%
\remainder=#1%
\divide\remainder by#2%
\multiply\remainder by#2%
\multiply\remainder by-1%
\advance\remainder by#1\relax%
}%

